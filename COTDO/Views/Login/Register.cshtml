@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>COTD - Formulario de registro</title>
    <link href="~/Content/Plantilla/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <link href="~/Content/Plantilla/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Content/animate.min.css" rel="stylesheet"/>
    <style>
        body {
            background: linear-gradient(to right, #001f3f, #0074d9);
            height: 100vh;
            margin: 0;
        }
    </style>
</head>

<body>

    <div class="container-fluid align-items-center py-5">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-9 col-lg-6">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-3">COTD</h1>
                                    </div>
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Formulario de Registro</h1>
                                    </div>
                                    <form class="user formRegistrar">
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                <input type="text" class="form-control form-control-user rounded" id="txtCedula"
                                                       placeholder="Ingrese su cédula" max="13">
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="email" class="form-control form-control-user rounded" id="txtCorreo"
                                                       placeholder="Ingrese un correo electrónico">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-6 mb-3 mb-sm-0">
                                                <input type="password" class="form-control form-control-user rounded"
                                                       id="txtPassword" placeholder="Ingrese su contraseña" autocomplete="off">
                                            </div>
                                            <div class="col-sm-6">
                                                <input type="password" class="form-control form-control-user rounded"
                                                       id="txtRepeatPassword" placeholder="Repita su contraseña" autocomplete="off" onpaste="return false;">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-user btn-block rounded" id="btnRegistrar">
                                            Registrar
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="#">¿Olvidaste tu contraseña?</a>
                                    </div>
                                    <div class="text-center">
                                        ¿Ya tienes una cuenta? <a class="small" href="@($"{Url.Content("~")}Login/Index")">Iniciar sesión</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        const controller = '@Url.Content("~")Login';
    </script>
    <script src="~/Content/js/sweetalert2@11.js"></script>
    <script src="~/Content/Plantilla/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Plantilla/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Plantilla/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Content/Plantilla/js/sb-admin-2.min.js"></script>
    <script src="~/Content/js/jquery.mask.min.js"></script>
    <script src="~/Content/js/helpers/common.js"></script>
    <script src="~/Content/js/controllerJs/login/register.js"></script>
</body>
</html>
